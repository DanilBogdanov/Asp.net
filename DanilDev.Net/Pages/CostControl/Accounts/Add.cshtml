@page
@model DanilDev.Pages.CostControl.Accounts.AddModel
@{
    ViewData["Title"] = "Add New Account";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form action="" method="post">
            <input id="referrer" type="hidden" name="referrer" />
            <script>
                referrer.value = document.referrer;                
            </script>
            @*<h4>Create a new account.</h4>*@
            <hr />
            
            <div class="form-group">
                <label >Name</label>
                <input name="AccountName" class="form-control" />                
            </div>
            <div class="form-group">
                <label>Description</label>
                <input name="AccountDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label>Balance</label>
                <input name="AccountBalance" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Add Account</button>
        </form>
    </div>
</div>