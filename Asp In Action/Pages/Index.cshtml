@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <p id="greetings" class="display-4"></p>
    <script>
        let currentHour = new Date().getHours();
        let greetingsOfTime;

        if (currentHour < 12) {
            greetingsOfTime = "Good Morning ";
        } else if (currentHour < 18) {
            greetingsOfTime = "Good Afrernoon ";
        } else {
            greetingsOfTime = "Good Evening ";
        }

        greetings.innerHTML = greetingsOfTime + "<br/>" + UserIdentityName.innerHTML;        
    </script>

</div>

